  	<url-pattern>/noticeView</url-pattern>
  </servlet-mapping>
  
 <servlet> 
  <servlet-name>rental</servlet-name>
  	<jsp-file>/rental.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
  	<servlet-name>rental</servlet-name>
  	<url-pattern>/rental</url-pattern>
  </servlet-mapping>
 

</web-app>